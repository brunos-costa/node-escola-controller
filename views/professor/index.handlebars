<section class="container">
    <section class="d-flex justify-content-between mt-4">
        <h3>Turmas do(a) professor(a) {{nomeUsuario}}</h3>
        <a href="/turma/create" class="btn btn-primary">Cadastrar turma</a>
    </section>
    <hr>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            {{#each dados}}
            <tr>
                
                <td>{{dataValues.nome}}</td>
                <td>
                    <a href="" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalDelete{{dataValues.id}}">Excluir</a>
                    <a href="/atividade/{{dataValues.id}}" class="btn btn-success" title="Exibir tela de atividades da turma">Visualizar</a>
                </td>
            </tr>
             {{> modal nomeTurma=dataValues.nome idTurma=dataValues.id}}
            {{else}}
            <p>Nenhuma turma cadastrada ainda</p>
            {{/each}}

        </tbody>
    </table>
</section>